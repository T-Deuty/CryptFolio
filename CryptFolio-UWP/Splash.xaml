<Page
    x:Class="CryptFolio.Splash"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CryptFolio"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

	<Grid Background="{ThemeResource SystemControlAcrylicWindowMediumHighBrush}">
		<Image x:Name="extendedSplashImage" Source="Assets/SplashScreen.png" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center" />
		<ProgressRing x:Name="DownloadProgressRing" Foreground="Azure" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="75" Width="75" Margin="0,400,0,0"/>
	</Grid>
</Page>
