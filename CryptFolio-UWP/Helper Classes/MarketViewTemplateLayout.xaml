<Page
    x:Class="CryptFolio.MarketViewTemplateLayout"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:src="using:CryptFolio"
	mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

	<Grid>
		<Grid.Resources>
			<src:MarketViewTemplates x:Key="marketViewTemplates"/>
		</Grid.Resources>

		<ListBox ItemsSource="{StaticResource marketViewTemplates}" MinWidth="350" Margin="0,5,0,10" HorizontalAlignment="Center">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<StackPanel Orientation="Vertical">
						<StackPanel Padding="5,5,5,5" Background="Black">
							<TextBlock Text="{Binding currencyName}" />
							<TextBlock Text="{Binding currencyUSDPrice}" />
						</StackPanel>
					</StackPanel>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
	</Grid>
</Page>
